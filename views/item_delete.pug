extends layout 

block content 
  h1= `${title} ${item.name}`

  p= item.name
  p= item.description
  p Price: #[strong #{item.price_formatted}]
  p Qty: #[strong #{item.stock}]
  p Total Value: #[strong #{item.totalVal}]

  form.flex-col.del-form(action="", method="post") 
    p Are you sure you want to delete this item?

    input(type="hidden", name="id", value=item._id)

    button(type="submit") Delete